<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.longhengyu.longcampus.com.example.xiaoyuan.longcampus.PersonSubs.SetLike.SetLikeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar14"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="饮食偏好"
            android:textColor="@color/appwhite"
            android:textSize="@dimen/mainText"/>

        <TextView
            android:id="@+id/text_setLike_submit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/appwhite"
            android:textSize="@dimen/mainText"/>
        </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:text="TextView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/linearLayout3">

                    <Button
                        android:id="@+id/button_setLike_TopLike"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/set_like_back_select"
                        android:text="喜好"
                        android:textColor="@drawable/set_like_title_select"/>

                    <Button
                        android:id="@+id/button_setLike_TopHate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/set_like_back_select"
                        android:text="厌恶"
                        android:textColor="@drawable/set_like_title_select"/>
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView_Top"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"
                    >

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/tagLayout_Top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>


                </ScrollView>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <EditText
                    android:id="@+id/editText_setLike_search"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="请输入文字"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/mainText"
                    android:inputType="textPersonName"
                    android:background="@drawable/set_like_search_shape"
                    android:layout_marginRight="24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"/>

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="0dp"
                    android:background="@color/colorAccent"
                    android:layout_height="1dp"
                    android:text="TextView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ScrollView
                    android:id="@+id/scrollView_bottom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_setLike_search"
                    app:layout_constraintVertical_bias="0.0"
                    >

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/tagLayout_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>


                </ScrollView>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:text="TextView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/linearLayout4">

                    <Button
                        android:id="@+id/button_setLike_bottomFootType"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/set_like_back_select"
                        android:text="食材种类"
                        android:textColor="@drawable/set_like_title_select"/>

                    <Button
                        android:id="@+id/button_setLike_bottomFlavor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/set_like_back_select"
                        android:text="口味"
                        android:textColor="@drawable/set_like_title_select"/>


                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
