<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBorBlack"
    tools:context="com.example.longhengyu.longcampus.com.example.xiaoyuan.longcampus.PersonSubs.Address.AddAddressActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar20"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:text="添加地址"
            android:textColor="@color/appwhite"
            android:textSize="@dimen/mainText"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </android.support.v7.widget.Toolbar>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="24dp"
        android:background="@color/appwhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar20"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout4">

        <EditText
            android:id="@+id/edit_add_address_address"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/ColorTransparent"
            android:ems="10"
            android:hint="请填写送餐员能够识别的地址"
            android:inputType="textPersonName"
            android:textSize="@dimen/mainText"
            app:layout_constraintBottom_toTopOf="@+id/textView51"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/textView50"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView49"/>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/ColorLine"
            android:text="TextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView50"/>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="详细地址"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/mainText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView49"/>

        <EditText
            android:id="@+id/edit_add_address_phone"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/ColorTransparent"
            android:ems="10"
            android:hint="11位手机号"
            android:inputType="textPersonName"
            android:textSize="@dimen/mainText"
            app:layout_constraintBottom_toTopOf="@+id/textView49"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/textView48"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45"/>

        <TextView
            android:id="@+id/textView49"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/ColorLine"
            android:text="TextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView48"/>

        <TextView
            android:id="@+id/textView48"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="联系电话"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/mainText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView45"/>

        <EditText
            android:id="@+id/edit_add_address_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/ColorTransparent"
            android:ems="10"
            android:hint="最少两个字"
            android:inputType="textPersonName"
            android:textSize="@dimen/mainText"
            app:layout_constraintBottom_toTopOf="@+id/textView45"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/textView42"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571"/>

        <TextView
            android:id="@+id/textView45"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/ColorLine"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView42"/>

        <TextView
            android:id="@+id/textView42"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="姓名"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/mainText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button_add_address_submit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:text="保存并使用"
        android:textColor="@color/appwhite"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"/>

</android.support.constraint.ConstraintLayout>
