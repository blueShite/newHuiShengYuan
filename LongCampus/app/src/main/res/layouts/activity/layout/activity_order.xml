<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.longhengyu.longcampus.com.example.xiaoyuan.longcampus.PersonSubs.Order.OrderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar28"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-7dp"
        app:layout_constraintHorizontal_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单列表"
            android:textColor="@color/appwhite"
            android:textSize="@dimen/mainText"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar28"
        android:id="@+id/linearLayout6">

        <Button
            android:id="@+id/button_order_list_noPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/order_title_btn_select"
            android:text="未付款"
            android:textColor="@drawable/order_title_btn_title_select"/>

        <Button
            android:id="@+id/button_order_list_noreceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/order_title_btn_select"
            android:text="未领取"
            android:textColor="@drawable/order_title_btn_title_select"/>

        <Button
            android:id="@+id/button_order_list_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/order_title_btn_select"
            android:text="已领取"
            android:textColor="@drawable/order_title_btn_title_select"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout_order_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
