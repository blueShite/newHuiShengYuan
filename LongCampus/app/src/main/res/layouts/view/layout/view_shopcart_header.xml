<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_shopHeader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.youth.banner.Banner
        android:id="@+id/banner_shopCart"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_shopCart"
        android:id="@+id/linearLayout2">

        <RelativeLayout
            android:id="@+id/relative_shopCart_jinrituijian"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jinrituijian"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="今日推荐"
                android:gravity="center"
                android:textSize="@dimen/smallText"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_shopCart_tejiayouhui"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tejiayouhui"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="特价优惠"
                android:gravity="center"
                android:textSize="@dimen/smallText"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_shopCart_tesetaocan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tesetaocan"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="特色套餐"
                android:gravity="center"
                android:textSize="@dimen/smallText"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_shopCart_wodecaidan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/wodecaidan"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="我的菜单"
                android:gravity="center"
                android:textSize="@dimen/smallText"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:background="@color/ColorLine"
        android:layout_height="0.5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>

    <ImageView
        android:id="@+id/image_shopCart_tuijian"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/tuijian"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView13"
        android:background="@color/ColorLine"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shopCart_tuijian"/>

    <TextView
        android:id="@+id/text_shopCartHeader_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="今日推荐"
        android:textSize="@dimen/smallText"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintLeft_toRightOf="@+id/image_shopCart_tuijian"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.555"/>

</android.support.constraint.ConstraintLayout>