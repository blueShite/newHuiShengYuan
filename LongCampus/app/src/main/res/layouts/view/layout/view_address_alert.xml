<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layout_address_alert"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/button_address_alert_set"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/ColorTransparent"
            android:text="修改"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/mainText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="取消"
            android:textSize="@dimen/mainText"
            android:textColor="@color/colorAccent"
            android:id="@+id/button_address_alert_cancel"
            android:background="@color/ColorTransparent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址选择"
            android:textSize="@dimen/mainText"
            android:textColor="@color/ColorBlcak"
            app:layout_constraintLeft_toRightOf="@+id/button_address_alert_cancel"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/button_address_alert_set"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView58"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ColorLine"
        android:text="TextView"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_alert_recycle"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:paddingRight="20dp"
            android:id="@+id/text_address_alert_packPrice"
            android:gravity="right"
            android:text="配送费:"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/button_address_alert_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="确认选择"
            android:textColor="@color/appwhite"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>