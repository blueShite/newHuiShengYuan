<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_pack_comm_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_pack_comm_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/mainText"
        android:textColor="@color/ColorBlcak"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_pack_comm_header"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button_pack_comm_collection"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/button_pack_comm_collection"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/collection_select"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_pack_comm_sub"
        android:textSize="@dimen/smallText"
        android:layout_width="0dp"
        android:textColor="@color/colorAccent"
        android:lines="1"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/image_pack_comm_header"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_pack_comm_name"/>

    <ImageView
        android:id="@+id/image_pack_comm_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/jia"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_pack_comm_sub"/>

    <TextView
        android:id="@+id/text_pack_comm_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/textView53"
        app:layout_constraintRight_toLeftOf="@+id/image_pack_comm_add"
        app:layout_constraintTop_toBottomOf="@+id/text_pack_comm_sub"
        app:layout_constraintVertical_bias="0.666"/>

    <TextView
        android:id="@+id/textView53"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/ColorLine"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_pack_comm_add"/>

    <ImageView
        android:id="@+id/image_pack_comm_redux"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/jian"
        app:layout_constraintBottom_toTopOf="@+id/textView53"
        app:layout_constraintRight_toLeftOf="@+id/text_pack_comm_num"
        app:layout_constraintTop_toBottomOf="@+id/text_pack_comm_sub"/>

    <TextView
        android:id="@+id/text_pack_comm_oldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/image_pack_comm_header"
        app:layout_constraintTop_toBottomOf="@+id/text_pack_comm_sub"/>

</android.support.constraint.ConstraintLayout>