<?xml version="1.0" encoding="utf-8"?>
<com.xiaoyuan.campus_order.CustomView.IntegralCircleLineLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_integral_exchange_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/caipu"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/text_integral_exchange_name"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/text_integral_exchange_name"
        android:layout_width="0dp"
        android:textSize="@dimen/mainText"
        android:textColor="@color/ColorBlcak"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/text_integral_exchange_inter"/>

    <TextView
        android:id="@+id/text_integral_exchange_inter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/mainText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_integral_exchange_ex"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/appwhite"
        android:textSize="@dimen/smallText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/text_integral_exchange_name"/>
</com.xiaoyuan.campus_order.CustomView.IntegralCircleLineLayout>